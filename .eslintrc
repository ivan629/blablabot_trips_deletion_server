{
  "ecmaFeatures": {
    "modules": true,
    "spread" : true,
    "restParams" : true
  },
  "env" : {
    "browser" : true,
    "node" : true,
    "es6" : true
  },
  "rules" : {
    "no-undef" : 2,
    "no-console": 1,
    "comma-dangle": 0,
    "no-unused-vars": "warn",
    "no-unexpected-multiline": "warn"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  }
}
